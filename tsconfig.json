{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"target": "ES6",
		"lib": ["ES2020"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
			]
		}
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}